<UserControl x:Class="ChaineTV_NICOLAS_TURECK.Accueil"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChaineTV_NICOLAS_TURECK"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Background="{StaticResource detailBackground}">
        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Center" Margin="5,10,0,0" Style="{StaticResource MaterialDesignHeadline2TextBlock}">
                    <Hyperlink IsEnabled="False">
                        <TextBlock Text="Bienvenue"/>
                    </Hyperlink>
                </TextBlock>
        <Image Source="/img/Accueil.jpg" Width="500" HorizontalAlignment="Center" Margin="0,10,0,0"/>
    </StackPanel>
</UserControl>
